@model IEnumerable<Inventory.Web.Models.EquipmentVM>

@{
    ViewBag.Title = "Оборудование";
}

<h2>Оборудование</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.EquipmentType.Name)</th>
        <th>@Html.DisplayNameFor(model => model.InventNumber)</th>
        <th>@Html.DisplayNameFor(model => model.Price)</th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.EquipmentType.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.InventNumber)</td>
        <td>@Html.DisplayFor(modelItem => item.Price)</td>
    </tr>
}
</table>
