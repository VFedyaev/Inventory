@model IEnumerable<Inventory.Web.Models.HistoryVM>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "История";
}

<h2>История</h2>

@Html.AntiForgeryToken()

<p>
    <a type="button" class="btn btn-primary" href="@Url.Action("Create", "History")"><i class="fa fa-plus"></i> Добавить новую запись</a>
</p>

@using (Ajax.BeginForm("EmployeeFilter", "Search", null, new AjaxOptions
{
    UpdateTargetId = "results",
    LoadingElementId = "loading",
    OnSuccess = "hideAccordion()"
}, new { @class = "ajax-form" }))
{
    @Html.AntiForgeryToken()
    <div class="header">

        <h3 id="title">
            Поиск <span id="loading" class="loading" style="display:none">
                <span>
                    <?xml version="1.0" encoding="UTF-8" standalone="no" ?>
                    <svg xmlns:svg="http://www.w3.org/2000/svg" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.0" width="16px" height="16px" viewBox="0 0 128 128" xml:space="preserve"><g><linearGradient id="linear-gradient"><stop offset="0%" stop-color="#ffffff" /><stop offset="100%" stop-color="#454445" /></linearGradient><path d="M63.85 0A63.85 63.85 0 1 1 0 63.85 63.85 63.85 0 0 1 63.85 0zm.65 19.5a44 44 0 1 1-44 44 44 44 0 0 1 44-44z" fill="url(#linear-gradient)" fill-rule="evenodd" /><animateTransform attributeName="transform" type="rotate" from="0 64 64" to="360 64 64" dur="1080ms" repeatCount="indefinite"></animateTransform></g></svg>
                </span>
            </span>
        </h3>
        <div class="row">
            <div class="col-md-11">
                <input type="text" id="name" class="form-control" name="name" placeholder="впишите имя сотрудника" required=required />
            </div>
            <div class="col-md-1">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default"><span class="fa fa-search"></span> Искать</button>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label class="control-label" for="position-select-list">Выберите статус (опционально)</label>
                <select class="form-control" id="position-select-list" name="positionId">
                    <option selected=selected value="">Должность</option>
                    @foreach (Inventory.Web.Models.StatusTypeVM status in ViewBag.Positions)
                    {
                        <option value="@status.Id">@status.Name</option>
                    }
                </select>
            </div>
        </div>
    </div><!-- /input-group -->
}

<hr />

<div id="results"></div>

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.EquipmentId)</th>
            <th> @Html.DisplayNameFor(model => model.EmployeeId)</th>
            <th>@Html.DisplayNameFor(model => model.RepairPlaceId) </th>
            <th> @Html.DisplayNameFor(model => model.StatusTypeId) </th>
            <th>@Html.DisplayNameFor(model => model.ChangeDate) </th>
            <th> @Html.DisplayNameFor(model => model.Comments)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td>@Html.DisplayFor(modelItem => item.Equipment.EquipmentType.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Employee.EmployeeFullName)</td>
                <td>@Html.DisplayFor(modelItem => item.RepairPlace.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.StatusType.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ChangeDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Comments)</td>
                <td>
                    <div class="btn-group float-right" role="group">
                        <a class="btn btn-info" name="editButton" id="editButton" href="@Url.Action("Edit", "History", new { id = item.Id })"><i class="fa fa-pencil" aria-hidden="true" title="Редактировать" data-toggle="tooltip" data-placement="top"> Редактировать</i></a>
                        <a class="btn btn-warning" name="detailsButton" id="detailsButton" href="@Url.Action("Details", "History", new { id = item.Id })"><i class="fa fa-eye" aria-hidden="true" title="Просмотреть" data-toggle="tooltip" data-placement="top"> Просмотреть</i></a>
                        <a class="btn btn-danger delete-prompt" name="deleteButton" id="@item.Id"><i class="fa fa-trash" aria-hidden="true" title="Удалить" data-toggle="tooltip" data-placement="top"> Удалить</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="result"> </div>

<div id="paginationToDelete">
    @Html.PagedListPager(Model, page => Url.Action("AjaxPositionList", new { page }),
     PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "result", OnSuccess = "removeListAndPagination()" }))
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
</div>

<!-- Bootstrap modal popup -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Удаление</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="success-message"> Вы действительно хотите удалить запись? </p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger delete-confirm">Да</button>
                <button class="btn btn-default delete-cancel" data-dismiss="modal">Нет</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        modalRemovalWindow('/History/Delete');
    </script>
}