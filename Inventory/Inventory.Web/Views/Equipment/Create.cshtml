@model Inventory.Web.Models.EquipmentVM

@{
    ViewBag.Title = "Добавление оборудования";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление оборудования</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Заполните поля</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.EquipmentTypeId)
        @Html.DropDownList("EquipmentTypeId", null, "Тип оборудования", htmlAttributes: new { @class = "form-control", @required = "required", @id = "equipmentTypeDropDown" })
        @Html.ValidationMessageFor(model => model.EquipmentTypeId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InventNumber)
        @Html.EditorFor(model => model.InventNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.InventNumber, "", new { @class = "text-danger" })
    </div>

    @*<div class="form-group">
        @Html.LabelFor(model => model.QRCode)
        <div calss="col-md-12">
            <div class="input-group">
                @Html.EditorFor(model => model.QRCode, new { htmlAttributes = new { @class = "form-control qrCodeField", @disabled = "disabled" } })
                <div class="input-group-append">
                    <a href="@Url.Action("Index", "Equipment")" class="btn btn-info"><i class="fa fa-qrcode" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"><span style="padding: 5px; width: 10%;">QRCode</span></i></a>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.QRCode, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Supplier)
        @Html.EditorFor(model => model.Supplier, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Supplier, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-success"><i class="fa fa-save" aria-hidden="true" title="Сохранить" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Сохранить</span></i></button>
            <a href="@Url.Action("Index", "Equipment")" class="btn btn-info"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Назад</span></i></a>
