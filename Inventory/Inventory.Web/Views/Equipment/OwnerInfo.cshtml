@model Inventory.Web.Models.OwnerInfoVM

@{
    ViewBag.Title = "Информация о сотруднике";
}

<h2>Информация о сотруднике</h2>

<div class="row">
    <div class="col-md-8">
        <div class="name row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.FullName)</b>
            </div>
            <div class="col-md-6 item-info">
                @Html.DisplayFor(model => model.FullName)
            </div>
        </div>
        <div class="room row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.Room)</b>
            </div>
            <div class="col-md-6 item-info">
                @Html.DisplayFor(model => model.Room)
            </div>
        </div>
        <div class="position row item-info-row" item-info-row>
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.Position)</b>
            </div>
            <div class="col-md-6 item-info">
                @Html.DisplayFor(model => model.Position)
            </div>
        </div>
        <div class="department row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.Department)</b>
            </div>
            <div class="col-md-6 item-info">
                @Html.DisplayFor(model => model.Department)
            </div>
        </div>
        <div class="administration row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.Administration)</b>
            </div>
            <div class="col-md-6 item-info">
                @Html.DisplayFor(model => model.Administration)
            </div>
        </div>
        <div class="division row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.Division)</b>
            </div>
            <div class="col-md-6 item-info">
                @Html.DisplayFor(model => model.Division)
            </div>
        </div>
        <div class="start-date row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.StartDate)</b>
            </div>
            <div class="col-md-6 item-info">
                @Model.StartDate.ToString("dd.MM.yyyy")
            </div>
        </div>
        <div class="end-date row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.EndDate)</b>
            </div>
            <div class="col-md-6 item-info">
                @Model.EndDate.ToString("dd.MM.yyyy")
            </div>
        </div>
        <div class="is-actual row item-info-row">
            <div class="col-md-6 item-info">
                <b>@Html.DisplayNameFor(model => model.IsActual)</b>
            </div>
            <div class="col-md-6 item-info">
                @Html.Raw(Model.IsActual ? "Да" : "Нет")
            </div>
        </div>
    </div>
</div>
<br />
<a href="@Url.Action("OwnerHistory", "Equipment", new { equipmentId = ViewBag.EquipmentId })" class="btn btn-info"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Назад</span></i></a>
