@model IEnumerable<Inventory.Web.Models.ComponentVM>

<h2>FindComponents</h2>

<div id="found-items" class="row">
    @if (Model.Count() <= 0)
    {
        <p>Нет результатов</p>
    }
    else
    {
        <table class="table table-hover table-responsive table-striped" id="found-items-list">
            <caption>Список найденных комплектующих</caption>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ComponentTypeId)</th>
                    <th>@Html.DisplayNameFor(model => model.ModelName)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.InventNumber)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Inventory.Web.Models.ComponentVM component in Model)
                {
                <tr id="@component.Id">
                    <td>
                        <button class="btn btn-primary" type="button" onclick="attachComponent(@component.Id)">Добавить</button>
                    </td>
                    <td class="type">@Html.DisplayFor(model => component.ComponentType.Name)</td>
                    <td class="model">@Html.DisplayFor(model => component.ModelName)</td>
                    <td class="name">@Html.DisplayFor(model => component.Name)</td>
                    <td class="number">@Html.DisplayFor(model => component.InventNumber)</td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>