@model Inventory.Web.Models.EquipmentEmployeeRelationVM

@{
    ViewBag.Title = "Редактирование записи";
}

<h2>Редактирование записи</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CreatedAt)
            <input type="date" name="CreatedAt" id="CreatedAt" class="form-control text-box single-line" value="@Model.CreatedAt.ToString("yyyy-MM-dd")" />
            @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UpdatedAt)
            <input type="date" name="UpdatedAt" id="UpdatedAt" class="form-control text-box single-line" value="@Model.UpdatedAt.ToString("yyyy-MM-dd")" />
            @Html.ValidationMessageFor(model => model.UpdatedAt, "", new { @class = "text-danger" })
        </div>

        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
}